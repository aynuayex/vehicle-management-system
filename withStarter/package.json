{
  "name": "@easy-starters/create-express-ts-starter",
  "version": "1.0.6",
  "description": "starter boilerplate with Typescript + Express + Mongoose + MongoDB + Pino + Jest",
  "bin": "./bin/script.js",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/aynuayex/vehicle-management-system/tree/main/backend"
  },
  "scripts": {
    "dev": "nodemon src/server.ts | npx pino-pretty",
    "start": "node dist/src/server.js | npx pino-pretty",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "debug-test": "jest --runInBand --detectOpenHandles",
    "debug-test-coverage": "jest --runInBand --detectOpenHandles --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc -p .",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier:fix": "prettier --write src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "express",
    "starter",
    "boilerplate",
    "mongoose",
    "mongodb",
    "atlas",
    "pino",
    "jest",
    "eslint",
    "prettier",
    "husky",
    "nodemon",
    "supertest"
  ],
  "author": "Ayne Abreham",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "mongoose": "^8.9.2",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "onchange": "^7.1.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
